#ifndef COORDINATE_HPP
#define COORDINATE_HPP

#include <stdlib.h>
#include <iostream>
using namespace std;

//定义一个坐标类

class Coordinate{
public:
   Coordinate():X(0),Y(0){};
   Coordinate(int x,int y):X(x),Y(y){};
   Coordinate(Coordinate& coor){X=coor.X;Y=coor.Y;};
   ~Coordinate(){};

   Coordinate& operator+(const Coordinate &coor);
   Coordinate operator+=(const Coordinate &coor);
   Coordinate operator-=(const Coordinate &coor);
   Coordinate operator=(const Coordinate &coor);
   bool operator==(const Coordinate &coor);
  
public:
   int X;
   int Y;
};


Coordinate Coordinate::operator=(const Coordinate &coor)
{
   this->X=coor.X;
   this->Y=coor.Y;
   return *this;
}
 
Coordinate& Coordinate::operator+(const Coordinate &coor)
{
   Coordinate temp;
   temp.X=this->X+coor.X;
   temp.Y=this->Y+coor.Y;
   return temp;  
} 
 
Coordinate Coordinate::operator+=(const Coordinate &coor)
{
   this->X+=coor.X;
   this->Y+=coor.Y;
   return *this;
}
   
Coordinate Coordinate::operator-=(const Coordinate &coor)
{
   this->X-=coor.X;
   this->Y-=coor.Y;
   return *this;
}
   
bool Coordinate::operator==(const Coordinate &coor)
{
   if(this->X==coor.X&&this->Y==coor.Y) return 1;
   else return 0;
}



#endif















